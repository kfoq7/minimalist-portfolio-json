---
import Section from './ui/Section.astro'

import { skills } from '@cv'
---

<Section title="Skills">
  <ul class="inline-flex gap-2 flex-wrap">
    {
      skills.map(({ name }) => (
        <li class="rounded-md bg-gray-200 text-black text-sm font-medium py-[.2rem] px-[.4rem]">
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>
