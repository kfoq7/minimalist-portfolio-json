---
import Section from './ui/Section.astro'

import { work } from '@cv'
---

<Section title="Work Experience">
  <ul class="flex flex-col gap-8">
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : 'Current'
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header class="mb-1 flex items-start justify-between">
                <div>
                  <h3 class="font-medium text-gray-900">{name}</h3>
                  <h4 class="font-normal text-gray-700">{position}</h4>
                </div>
                <time class="text-[0.85rem] text-gray-800">{years}</time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>
